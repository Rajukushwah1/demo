<h2 style="color:Tomato;"> New Post </h2>
<%= form_for @post do |form| %>
  <% if @post.errors.any? %>
      <h2>Errors:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>   
  <% end %>
 
  <div class="field from-group">
    <u><%= form.label :title %></u>
    <%= form.text_field :title, class:"form-control" %>
  </div><br>

  <div class="field from-group">
    <u><%= form.label :image %></u>
    <%= form.file_field :image, class:"form-control" %>
    <td><%image_tag @post.image if @post.image.attached? %></td>
  </div><br>

   <div class="field from-group">
    <u> <%= form.label :description %></u>
    <%= form.text_area :description,size: "60x10", class:"form-control" %>
  </div>
  <%= form.submit 'submit', class:"btn btn-primary" %>
  <%= link_to 'Back', posts_path, class:"btn btn-info" %>
<% end %>