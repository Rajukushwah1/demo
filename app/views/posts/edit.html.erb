<h1 style="color:Tomato;"> Post Edit From </h1>
<%= form_with model: @post do |form| %>
  <% if @post.errors %>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field from-group">
    <u><%= form.label :title %></u><br><br>
    <%= form.text_field :title, class:"form-control" %><br><br>
  </div>

  <div class="field from-group">
    <u><%= form.label :image %></u><br><br>
    <%= form.file_field :image, class:"form-control" %><br><br>
    <td><%image_tag @post.image if @post.image.attached? %></td>
  </div>

   <div class="field from-group">
    <u> <%= form.label :description %></u><br><br>
    <%= form.text_area :description,size: "60x10", class:"form-control" %><br><br>
  </div>

  <%= form.submit %><br><br>
<% end %>


  