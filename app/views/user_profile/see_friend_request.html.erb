<h1>Requests </h1>
<% @friends.each do |friend| %>
  <% user = User.find(friend.sender_id) %>
  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label"><%= user.id %><%= user.name %>
      <%= user.email%>
    </label>
    <div class="col-sm-10">
      <%= link_to "accept request", edit_friendshipe_path(friend.id),
    class:"btn btn-primary"  %>
    </div>
  </div>
<% end %>



