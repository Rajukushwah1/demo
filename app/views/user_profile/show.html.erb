<body>	
	<div class="container">
	  <div class="leftpane">
	   <%= image_tag "ak.jpeg", {height: 140} %>

	  </div>
	  <div class="leftpane">
		  <strong><%= current_user.name.capitalize() %></strong><br>
			<%= current_user.email %><br>
			<%= current_user.mobile_no %><br>
			<%= current_user.address %><br>
	  </div>
	  <div class="leftpane">
		  <%= link_to 'index post', posts_path, class:"btn btn-primary" %><br>
	    <%= link_to '+ post', new_post_path, class:"btn btn-primary" %>
	    <%= link_to 'New Friend', add_new_friend_path, class:"btn btn-primary" %><br> 
	    <%= link_to 'Friend request', see_friend_request_path, class:"btn btn-primary" %>
	    <%= link_to 'My Friend', friend_path, class:"btn btn-primary" %><br>
	  </div>
      <div class="bottompane">
			<div class="row">
			 <%@posts.each do |post| %>

			  <div class="card col-md-3" style="height: 400px; background-color: #b3d9ff;">
		     <%= image_tag post&.image, class:"card-img-top", style: "height: 200px"%>
			  <div class="card-body">
			    <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
				    <p class="card-text"> <%= post.description %> </p>
				    <div style="margin-bottom: 10px;">
			    	<%= form_with model: Comment.new do |form| %>
			        <%= hidden_field_tag :post_id, post.id %>
			        <%= form.text_field :body, placeholder: "Comment", style: "width: 197px; display: inline" %>
			        <%= form.submit 'submit' %>
            <% end %>
			    </div>
				  </div>
			  </div>
       <% end %>
			</div>
      </div> 
</body>



