<% @totle_friends.each do |friend| %>
    <% if (friend.confirmation == true) %>
        <% user = User.find(friend.sender_id) %>
        <%= user.id %>:<%= user.name %><%= link_to 'Destroy', friendshipe_path(friend),
              method: :delete,
              data: { confirm: 'Are you sure?' } %><br><br>  

    <% end %>
<% end %>
